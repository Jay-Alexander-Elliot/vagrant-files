# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrant configuration for Rocky Linux 9 VM

Vagrant.configure("2") do |config|
  # Use the official Rocky Linux 9 Vagrant box
  config.vm.box = "rockylinux/9"
  config.vm.box_version = "3.0.0"

  # Define virtual machine name
  config.vm.define "jay-alexander-elliot-rocky-linux-9-server"

  # Set virtual machine hostname
  config.vm.hostname = "jay-alexander-elliot-rocky-linux-9-server"

  # Disable automatic box update checking
  config.vm.box_check_update = false

  # Network configuration
  config.vm.network "private_network", ip: "192.168.101.10"

  # Disable synced folder
  config.vm.synced_folder ".", "/vagrant", disabled: true

  # SSH credentials
  config.ssh.username = "vagrant"
  config.ssh.private_key_path = ["~/.vagrant.d/insecure_private_key"]
  config.ssh.insert_key = false

  # VirtualBox provider-specific configuration
  config.vm.provider "virtualbox" do |vb|
    vb.customize ["modifyvm",:id,"--usb","on"]
    vb.gui = false
    vb.memory = "2048"
    vb.cpus = "1"
    vb.name = "jay-alexander-elliot-rocky-linux-9-server"
  end

  # Provisioning with a shell script
  config.vm.provision "shell", inline: <<-SHELL
    dnf update
    dnf upgrade -y
    dnf install -y wget vim net-tools gcc make tar git unzip sysstat tree nano
  SHELL
end
